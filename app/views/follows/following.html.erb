<div class="pad">
  <div class="d-flex pt-2 justify-content-between align-items-center">
    <%= link_to :back, class:"back-button" do %>
      <i class="fa-solid fa-caret-left arrow"></i>
    <% end %>
    <h5>Following</h5>
  </div>
  <div class="row">
    <%# user card starts %>
      <% @followings.each do |following| %>
        <div class="col-md-4 mt-1">
          <div class="card p-2 mb-2">
            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex flex-row align-items-center">
                <div class="d-flex align-items-center">
                    <%= image_tag following.avatar, class: "c-details-avatar", height: 45, width: 45, crop: :fill %>
                </div>
                <div class="c-details-username">
                  <p class="mb-0">
                     <%= link_to format_username(following.username), user_path(following) %>
                  </p>
                </div>
              </div>
              <div class="ms-2">
                <span class="text1"><%= published_lists(following).size %> <span class="text2"><%=  "list".pluralize(published_lists(following).size) %></span></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <%# user card ends %>
  </div>
</div>

<div class="pad">
  <div class="d-flex justify-content-between">
    <%= link_to :back, class:"back-button" do %>
      <i class="fa-solid fa-caret-left"></i>
    <% end %>
    <h3>Followers</h3>
  </div>
  <div>
    <% @user.followers.each do |follower| %>
      <ul class="follow-list">
        <li class="list-card-info d-flex justify-content-between">
          <div class="list-info d-flex align-items-center">
            <%# user image %>

            <%# follower user %>
            <%= link_to format_username(follower.username), user_path(follower) %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</div>

<h1> <%= @list.title %> </h1>

<% @list.items.each do | item | %>
  <ul>
    <li>
  <%= item.name %>
    </li>
  </ul>
<% end %>

<% if @list.items.length < 11 %>

  <%= simple_form_for [@item] do |f| %>
    <%= f.input :name %>
    <%= f.hidden_field :list_id, value: @list.id %>
    <%= f.submit %>
  <% end %>

<% end %>

<br>
<br>
<%= link_to "<<< My Lists", user_lists_path  %>

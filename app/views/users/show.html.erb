
<%= image_tag @user.avatar, height: 250, width: 250, crop: :fill %>
<h3><%= @user.username %></h3>
<p>bio: <%= @user.bio %></p>
<% unless hide_button(@user) %>
  <%= follow_or_unfollow_button(@user, @following) %>
<% end %>

<p>Following: <%= link_to @user.followings.size, user_following_path(@user) %></p>
<p>Followers: <%= link_to @user.followers.size, user_followers_path(@user) %></p>

<% if published_lists(@user).present? %>
  <p><%= pluralize(published_lists(@user).size, "list") %>:</p>
<% end %>
<ul>
      <% published_lists(@user).each do | list | %>
          <li>
          <%= link_to list.title, user_list_path(@user, list) %>
          <%= list.votes ? list.votes : 0 %> 👍
          </li>
        <% end %>
    </ul>

<% if hide_button(@user) %>
  <p><%= pluralize(unpublished_lists(current_user).size, " unpublished list") %>:</p>
  <ul>
    <% unpublished_lists(current_user).each do | list | %>
      <li>
        <%= link_to list.title, user_list_path(current_user, list) %>
        <%= list.votes ? list.votes : 0 %> 👍
      </li>
    <% end %>
  </ul>
<% end %>


<div class="pad home-card">
  <div class="container d-flex flex-column justify-content-around logo-wrap">

      <div class="logo-text">
        <div class="home-logos">
          <%= image_tag("https://res.cloudinary.com/mygreenhouses/image/upload/v1655547120/list-it/listit-icon_wordmark-horizontal_tgonja.png", width: 250, crop: :fill) %>
        </div>
      </div>

      <div class="welcome-card">
        <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email,
                        placeholder: "Enter your email",
                        label: false,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>

  </div>
</div>

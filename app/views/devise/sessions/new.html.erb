<div class="pad home-card">
  <div class="container d-flex flex-column justify-content-around logo-wrap">

      <div class="logo-text">
        <div class="home-logos">
          <%= image_tag("https://res.cloudinary.com/mygreenhouses/image/upload/v1655547120/list-it/listit-icon_wordmark-horizontal_tgonja.png", width: 250, crop: :fill) %>
        </div>
      </div>

      <div class="welcome-card">
        <h1 class="h3 mb-3 font-weight-normal">Log in</h1>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class:"btn btn-flat" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>

  </div>
</div>
